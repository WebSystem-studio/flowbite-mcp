# Flowbite MCP Server Environment Configuration

# Server Configuration
MCP_SERVER_NAME=flowbite-mcp-server
MCP_SERVER_VERSION=0.1.0
MCP_SERVER_DESCRIPTION="MCP server pre Flowbite komponenty"

# Data Configuration  
DATA_DIR=./data
COMPONENTS_DIR=data/components
EXAMPLES_DIR=data/examples
SCHEMAS_DIR=data/schemas

# Generation Settings
DEFAULT_THEME=light
INCLUDE_DARK_MODE=true
RESPONSIVE_DEFAULT=true

# Validation Settings
STRICT_VALIDATION=true
AUTO_FORMAT=true

# Logging Configuration
DEBUG=false
LOG_LEVEL=INFO
LOG_FILE=./logs/server.log

# MCP Configuration
MCP_VERSION=1.0
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=30

# Performance Configuration
CACHE_ENABLED=true
CACHE_TTL=3600

# Development Configuration (only for development)
DEV_MODE=false
HOT_RELOAD=false
TEST_MODE=false

# Optional: Future features
# DATABASE_URL=sqlite:///./data/flowbite.db
# API_KEY=your-secret-api-key
# FLOWBITE_API_URL=https://api.flowbite.com